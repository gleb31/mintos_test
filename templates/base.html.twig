<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Mintos Test Application{% endblock %}</title>

        {% block stylesheets %}
        <link href="{{asset('build/app.css')}}" rel="stylesheet" />
        {% endblock %}
        {{ encore_entry_script_tags('app') }}

        <!-- Renders app.js & a webpack runtime.js file
            <script src="/build/runtime.js"></script>
            <script src="/build/app.js"></script> -->
    </head>

    <body>

        <a href="/"><img src="{{ asset('build/img/mintos-logo-quality.png') }}" alt="Mintos Test Application"></a>

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        {% block body %}{% endblock %}
        {% block javascripts %}
        {% endblock %}

    </body>
</html>
